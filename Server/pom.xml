<?xml version="1.0" encoding="UTF-8"?>

<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <modelVersion>4.0.0</modelVersion>
  <artifactId>super-gluu-radius-server</artifactId>
  <version>4.1.1.Final</version>
  <parent>
    <groupId>org.gluu</groupId>
    <artifactId>super-gluu-radius</artifactId>
    <version>4.1.1.Final</version>
  </parent>

  <name>Super Gluu Radius Server</name>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
  
  <dependencies>
    <!-- tinyradius -->
    <dependency>
      <groupId>com.hynnet</groupId>
      <artifactId>tinyradius</artifactId>
      <version>1.0</version>
    </dependency>

    <!-- oxcore-radius -->
    <dependency>
      <groupId>org.gluu</groupId>
      <artifactId>oxcore-radius</artifactId>
      <version>${gluu.components.version}</version>
    </dependency>

    <!-- oxcore-persistence-ldap -->
    <dependency>
      <groupId>org.gluu</groupId>
      <artifactId>oxcore-persistence-ldap</artifactId>
      <version>${gluu.components.version}</version>
    </dependency>

    <!-- oxcore-persistence-couchbase -->
    <dependency>
      <groupId>org.gluu</groupId>
      <artifactId>oxcore-persistence-couchbase</artifactId>
      <version>${gluu.components.version}</version>
    </dependency>

    <!-- oxcore-persistence-hybrid -->
    <dependency>
      <groupId>org.gluu</groupId>
      <artifactId>oxcore-persistence-hybrid</artifactId>
      <version>${gluu.components.version}</version>
    </dependency>

    <!-- oxcore-persistence-annotations -->
    <dependency>
      <groupId>org.gluu</groupId>
      <artifactId>oxcore-persistence-annotation</artifactId>
      <version>${gluu.components.version}</version>
    </dependency>

    <!-- oxauth client -->
    <dependency>
      <groupId>org.gluu</groupId>
      <artifactId>oxauth-client</artifactId>
      <version>${gluu.components.version}</version>
    </dependency>
    
    <dependency>
      <groupId>org.gluu</groupId>
      <artifactId>supergluu-auth-client</artifactId>
      <version>${gluu.components.version}</version>
    </dependency>

    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-log4j12</artifactId>
      <version>1.7.26</version>
    </dependency>

    <dependency>
      <groupId>org.apache.logging.log4j</groupId>
      <artifactId>log4j-api</artifactId>
      <version>2.11.2</version>
    </dependency>

    <dependency>
      <groupId>org.apache.logging.log4j</groupId>
      <artifactId>log4j-core</artifactId>
      <version>2.11.2</version>
    </dependency>

    <dependency>
      <groupId>commons-cli</groupId>
      <artifactId>commons-cli</artifactId>
      <version>1.4</version>
    </dependency>

  </dependencies>

  <build>
    <finalName>${project.artifactId}</finalName>
    <plugins>
      <!-- compiler plugin -->
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.7.0</version>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
          <showWarnings>true</showWarnings>
          <showDeprecation>true</showDeprecation>
          <compilerArgs>
            <arg>-Xlint:all</arg>
          </compilerArgs>
        </configuration>
      </plugin>

      <!-- maven-jar-plugin -->
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>3.1.2</version>
        <configuration>
          <archive>
            <manifest>
              <addClasspath>true</addClasspath>
              <classpathPrefix>libs/</classpathPrefix>
              <mainClass>org.gluu.radius.ServerEntry</mainClass>
              <addBuildEnvironmentEntries>true</addBuildEnvironmentEntries>
            </manifest>
          </archive>
        </configuration>
      </plugin>

      <!-- maven-assembly-plugin -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-assembly-plugin</artifactId>
        <version>3.1.1</version>
        <executions>
          <execution>
            <id>make-assembly-dist</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
            <configuration>
              <descriptors>
                  <descriptor>src/assembly/src.xml</descriptor>
              </descriptors>
            </configuration>
          </execution>
        </executions>
      </plugin>

    </plugins>

  </build>
</project>
